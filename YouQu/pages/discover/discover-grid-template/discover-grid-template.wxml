<import src="../discover-template/discover-template.wxml" />

<template name="discoverGridTemplate">
  <scroll-view class='grid-container' scroll-y ="true" scroll-x="false" bindscrolltolower = "onScrollOwer">
    <block wx:for="{{movies}}" wx:for-item="movie">
      <view class='single-view-container'>
        <template is="discoverTemplate" data="{{...movie}}"></template>
      </view>
    </block>
  </scroll-view>
</template>