<import src="../discover-template/discover-template.wxml" />
<template name="discoverListTemplate">
  <view class='discoverList-container'>
    <view class='discover-head'>
      <text class='discover-slogan'>{{categoryTitle}}</text>
      <view class='more'>
        <text class='more-text'>更多</text>
        <image class='more-img' src='/images/icon/arrow-right.png'></image>
      </view>
    </view>
    <view class='disvoers-container'>
      <block wx:for='{{movies}}' wx:for-item='movie'>
        <template is='discoverTemplate' data="{{...movie}}" />
      </block>

      <!-- <template is='discoverTemplate' />
      <template is='discoverTemplate' /> -->
    </view>
  </view>
</template>