<!--pages/index/indexDetial/indexDetial.wxml-->
<view class='index-container'>
  <view class='status-bar'></view>
  <view class='index-title'>
    <text class='index-title-back' bindtap='onBackTap'>返回</text>
    <text class='index-title-text'>柚趣</text>
  </view>


  <view class="indexDetial-container">
    <image src='{{indexDetialHeadImg}}' class='indexDetial-headImg'></image>
    <image src='{{audioController}}' class='audio' bindtap='onMusicPlay'></image>
    <view class='indexDetial-articleInfo'>
      <image src='{{authHaedImg}}' class='indexDetial-articleInfo-authImg'></image>
      <text class='indexDetial-articleInfo-author'>{{authorName}}</text>
      <text class='indexDetial-articleInfo-status'>{{articleStatus}}</text>
      <text class='indexDetial-articleInfo-date'>{{articleDate}}</text>
    </view>
    <text class='indexDetial-articleTitle'>{{articleTitle}}</text>
    <view class='tool'>
      <view class='tool-img'>
        <image class='indexDetial-articleCollect' src='../../../images/icon/collection.png'></image>
        <image class='indexDetial-articleShare' src='../../../images/icon/share.png'></image>
      </view>
      <view class='indexDetial-line'></view>
    </view>

    <text class='indexDetial-articleDetial'> {{articleDetial}}</text>







  </view>




</view>